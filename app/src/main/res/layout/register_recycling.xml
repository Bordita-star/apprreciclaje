<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopantalla1"
    android:padding="10dp"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    tools:context=".RegisterRecycling">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/recicla" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="233dp"
        android:layout_height="32dp"
        android:text="Registro reciclaje"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerMaterial"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonclear" />

    <EditText
        android:id="@+id/editTextQuantity"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Cantidad Kg"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMaterial" /> />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextQuantity"
        android:layout_marginTop="45dp"
        android:backgroundTint="#9A1C5F1F"
        android:text="Agregar"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonclear"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#9A1C5F1F"
        android:text="Clear"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos: 0"
        android:layout_below="@id/buttonAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/listViewRewards"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:layout_below="@id/textViewPoints"
        android:layout_marginTop="18dp" />
    

    <Button
        android:id="@+id/button18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="640dp"
        android:backgroundTint="#9A1C5F1F"
        android:text="Volver a menu"
        android:textSize="20dp" />

</RelativeLayout>